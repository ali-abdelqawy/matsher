{
  "name": "matsher",
  "version": "1.0.0",
  "description": "A matching system that connects property requests with relevant ads based on specific criteria.",
  "main": "src/index.js",
  "scripts": {
    "clean": "node scripts/clean",
    "prebuild": "npm run clean",
    "build": "swc src -d dist",
    "prestart": "npm run build",
    "start": "node dist/src/index",
    "dev": "nodemon --watch src --ext '*' --exec \"npm run start\"",
    "dock:build": "docker build -t matsher-dev-api .",
    "dock:purge": "docker rm matsher-dev-api",
    "copy-dotenv": "node scripts/copy-dotenv",
    "preup:dev": "npm run copy-dotenv",
    "up:dev": "docker-compose -f compose.dev.yml up",
    "up-rebuild": "docker-compose -f compose.dev.yml up --build"
  },
  "author": "Ali Khaled",
  "dependencies": {
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.19.2",
    "mongoose": "^8.4.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.7",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "nodemon": "^3.1.1",
    "typescript": "^5.4.5"
  }
}
