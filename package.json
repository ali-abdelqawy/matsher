{
  "name": "matsher",
  "version": "1.0.0",
  "description": "A matching system that connects property requests with relevant ads based on specific criteria.",
  "main": "src/index.js",
  "scripts": {
    "prebuild": "node scripts/clean",
    "build": "swc src -d dist",
    "prestart": "npm run build",
    "start": "node dist/src/index",
    "dev": "nodemon --watch src --ext '*' --exec \"npm run start\"",
    "dock:build:dev": "docker build -t matsher-dev-api .",
    "dock:purge:dev": "docker rm matsher-dev-api",
    "preup:dev": "node scripts/copy-dotenv",
    "up:dev": "docker-compose -f compose.dev.yml up",
    "up-rebuild": "docker-compose -f compose.dev.yml up --build"
  },
  "author": "Ali Khaled",
  "dependencies": {
    "@swc-node/register": "^1.9.2",
    "@zxcvbn-ts/core": "^3.0.4",
    "@zxcvbn-ts/language-common": "^3.0.4",
    "@zxcvbn-ts/language-en": "^3.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-validator-jsonschema": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.11",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^10.4.0",
    "mongoose": "^8.4.0",
    "node-cron": "^3.0.3",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "routing-controllers-openapi": "^4.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.7",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.12",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.1.1",
    "nyc": "^17.0.0",
    "typescript": "^5.4.5"
  }
}
